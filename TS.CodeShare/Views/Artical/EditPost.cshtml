@using TS.CodeShare.Models
@model PostArticalModel
@{
    ViewBag.Title = "Edit Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Post</h2>
<link rel="stylesheet" href="../../trumbowyg/dist/ui/trumbowyg.min.css">

<!-- Import jQuery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="../js/vendor/jquery-3.3.1.min.js"><\/script>')</script>

<!-- Import Trumbowyg -->
<script src="../../trumbowyg/dist/trumbowyg.min.js"></script>
<script src="../../trumbowyg/dist/plugins/upload/trumbowyg.pasteimage.min.js"></script>

<style>
    input[type="submit"], input[type="reset"], input[type="button"], button, .button {
        box-shadow: inset 0 0 0 0px #f56a6a;
    }

    input[name="btnPostArtical"] {
        box-shadow: inset 0 0 0 0px Black;
    }
</style>
<h2>Post Artical</h2>
@using (Html.BeginForm("EditPost", "Artical", FormMethod.Post, new { @class = "form-horizontal", role = "form", Validation = "false" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Language, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m=>m.Language, new List<SelectListItem>
{
   new SelectListItem{ Text="DotNet", Value = "DotNet" },
   new SelectListItem{ Text="HTML", Value = "HTML" },
   new SelectListItem{ Text="SQL", Value = "SQL" } }, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Subject, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.topic_details, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.topic_details, new { @class = "form-control" })
        </div>
    </div>
    if (Convert.ToString(Session["uid"]) == "1")
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FileName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.FileName, new { @class = "form-control" })
            </div>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m=>m.Content, new { @class = "form-control" })
            @*@Html.Raw(m.Content);*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" style="box-shadow: inset 0 0 0 1px Black;color: #111010 !important;" value="Submit Post" />
        </div>
    </div>
}

